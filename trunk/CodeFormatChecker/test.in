program  
         : (PROGRAM ID SEMI!) ? (var_block | const_block | type_block | procedure_block | funtion_block)* compound_statement
         ;


number : NUMBER
       ;
string : STRING
       ;
id     : ID
       ;
op : OPERATOR;

var_block : ;
const_block : ;
type_block : ;
procedure_block : ;
function_block : ;
statement  
          :  if_block 
          |  while_block
          |  expression ';'
          |  compound_statement
          ;
compound_statement : BEGIN (statement)* END
                  ;

expression : function_call 
           | expression OP expression
           | number
           | string
           | id
           ;
function_call : ID "(" expression ("," expression)* CLOSE
              ;
if_block    : IF expression THEN statement (ELSE statatement)?
            ;
while_block : WHILE expression DO statement
            ;


              
           
               

   
            
